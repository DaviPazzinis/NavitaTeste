<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="8dp"
    android:padding="0dp"
    android:background="@drawable/borde_line">


    <ImageView
        android:id="@+id/image_movie_banner"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/image_movie_rate"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_res_round"
        app:layout_constraintBottom_toBottomOf="@+id/image_movie_banner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_movie_banner" />

    <TextView
        android:id="@+id/text_movie_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/image_movie_rate"
        app:layout_constraintLeft_toLeftOf="@+id/image_movie_rate"
        app:layout_constraintRight_toRightOf="@+id/image_movie_rate"
        app:layout_constraintTop_toTopOf="@+id/image_movie_rate" />

    <TextView
        android:id="@+id/text_movie_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/text_movie_rate"
        app:layout_constraintTop_toBottomOf="@+id/image_movie_rate" />

    <TextView
        android:id="@+id/text_movie_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/text_movie_rate"
        app:layout_constraintTop_toBottomOf="@id/text_movie_name"
        android:paddingBottom="8dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>