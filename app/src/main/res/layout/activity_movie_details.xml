<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MovieDetailsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleTextAppearance="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/text_detail_movieBanner"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:contentDescription="@string/app_name"
                android:scaleType="matrix"
                app:layout_collapseMode="parallax" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ic_favorite"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:paddingTop="8dp"
                android:src="@drawable/ic_baseline_favorite_24"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/ic_like"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/Green" />

            <TextView
                android:id="@+id/text_detail_moviePopularity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXX"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/ic_favorite"
                app:layout_constraintRight_toRightOf="@+id/ic_favorite"
                app:layout_constraintTop_toBottomOf="@id/ic_favorite" />

            <ImageView
                android:id="@+id/ic_like"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:paddingTop="8dp"
                android:src="@drawable/ic_baseline_check_circle_24"
                app:layout_constraintLeft_toRightOf="@id/ic_favorite"
                app:layout_constraintRight_toRightOf="@id/ic_calendar"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/Green" />

            <TextView
                android:id="@+id/text_detail_movieVotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXX"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/ic_like"
                app:layout_constraintRight_toRightOf="@+id/ic_like"
                app:layout_constraintTop_toBottomOf="@id/ic_like" />

            <ImageView
                android:id="@+id/ic_calendar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:paddingTop="8dp"
                android:src="@drawable/ic_baseline_calendar_today_24"
                app:layout_constraintLeft_toRightOf="@id/ic_like"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/Green" />

            <TextView
                android:id="@+id/text_detail_movieDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXX"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/ic_calendar"
                app:layout_constraintRight_toRightOf="@+id/ic_calendar"
                app:layout_constraintTop_toBottomOf="@id/ic_calendar" />


            <TextView
                android:id="@+id/text_overview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="OVERVIEW"
                android:textColor="@color/Black"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_detail_movieVotes" />

            <View
                android:id="@+id/view_lineTwo"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/Black"
                app:layout_constraintBottom_toBottomOf="@id/text_overview"
                app:layout_constraintLeft_toRightOf="@id/text_overview"
                app:layout_constraintTop_toTopOf="@id/text_overview" />


            <TextView
                android:id="@+id/text_detail_movieOverview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp"
                android:textColor="@color/Black"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_overview" />

            <TextView
                android:id="@+id/text_originalLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingBottom="16dp"
                android:text="Original Language: "
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_detail_movieOverview" />

            <TextView
                android:id="@+id/text_detail_originalLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:text="XXX"
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:textAllCaps="true"
                app:layout_constraintLeft_toRightOf="@id/text_originalLanguage"
                app:layout_constraintBottom_toBottomOf="@id/text_originalLanguage"/>

            <TextView
                android:id="@+id/text_originalTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingBottom="16dp"
                android:text="Original Title: "
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_originalLanguage" />

            <TextView
                android:id="@+id/text_detail_originalTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp"
                android:text="XXX"
                android:textColor="@color/Black"
                android:textSize="20sp"
                app:layout_constraintLeft_toRightOf="@id/text_originalTitle"
                app:layout_constraintBottom_toBottomOf="@id/text_originalTitle"/>

            <TextView
                android:id="@+id/text_realiseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingBottom="16dp"
                android:text="Realise Date: "
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_originalTitle" />

            <TextView
                android:id="@+id/text_detail_realiseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingBottom="16dp"
                android:text="XXX"
                android:textColor="@color/Black"
                android:textSize="20sp"

                app:layout_constraintLeft_toRightOf="@id/text_realiseDate"
                app:layout_constraintBottom_toBottomOf="@id/text_realiseDate"/>

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingBottom="16dp"
                android:text="Title: "
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_realiseDate" />

            <TextView
                android:id="@+id/text_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp"
                android:text="XXX"
                android:textColor="@color/Black"
                android:textSize="20sp"

                app:layout_constraintLeft_toRightOf="@id/text_title"
                app:layout_constraintBottom_toBottomOf="@id/text_title"/>

            <TextView
                android:id="@+id/text_popularity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingBottom="16dp"
                android:text="Popularity: "
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_title" />

            <TextView
                android:id="@+id/text_detail_popularity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp"
                android:text="XXX"
                android:textColor="@color/Black"
                android:textSize="20sp"

                app:layout_constraintLeft_toRightOf="@id/text_popularity"
                app:layout_constraintBottom_toBottomOf="@id/text_popularity"/>

            <TextView
                android:id="@+id/text_averageVote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingBottom="16dp"
                android:text="Average Votes: "
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_popularity" />

            <TextView
                android:id="@+id/text_detail_averageVotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp"
                android:text="XXX"
                android:textColor="@color/Black"
                android:textSize="20sp"

                app:layout_constraintLeft_toRightOf="@id/text_averageVote"
                app:layout_constraintBottom_toBottomOf="@id/text_averageVote"/>

            <TextView
                android:id="@+id/text_votesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingBottom="16dp"
                android:text="Votes Count: "
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_detail_averageVotes" />

            <TextView
                android:id="@+id/text_detail_votesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp"
                android:text="XXX"
                android:textColor="@color/Black"
                android:textSize="20sp"
                app:layout_constraintLeft_toRightOf="@id/text_votesCount"
                app:layout_constraintBottom_toBottomOf="@id/text_votesCount"/>


            <ImageView
                android:id="@+id/text_detail_movieBannerBG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.2"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
